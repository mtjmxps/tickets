        $(function () {            
            var cache = {};
            $("#Drug").autocomplete({
                minLength: 0,
                source: function (request, response) {
                    var term = request.term;
                    if (term in cache) {
                        data = cache[term];
                        response($.map(data, function (item) {
                            return {
                                label: item.Name,
                                value: item.Code
                            }
                        }));
                    }
                    else {
                        $.ajax({
                            url: "/TS/GetDrugList",
                            dataType: "json",
                            type: "POST",
                            contentType: "application/json; charset=utf-8",
                            data: JSON.stringify({
                                //top: 10,
                                term: request.term
                            }),
                            success: function (data) {
                                if (data.length) {
                                    cache[term] = data ;
                                    response($.map(data, function (item) {
                                        return {
                                            label: item.Name,
                                            value: item.Code
                                        }
                                    }));
                                }
                            }
                        });
                    }
                },
                //focus: function (event, ui) {
                //    $("#Drug").val(ui.item.label);
                //    return false;
                //},
                select: function (event, ui) {
                    $("#Drug").val(ui.item.label);
                    //$("#itemNbr-id").val(ui.item.value);
                    return false;
                }

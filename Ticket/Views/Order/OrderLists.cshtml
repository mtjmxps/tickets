
@{
    ViewBag.Title = "OrderLists";
}

<h2>用户订单查询</h2>
<div>
    <div>订单号：<input id="odnum" type="text" value="@ViewBag.sn" />联系电话：<input type="text" value="@ViewBag.phone" /><a href="javascript:void(0)" onclick="cklist()">查询</a></div>
    <div >订单详情
        <div>
            <table id="ddmx">
                <tr><th class="w200">订单号</th><th class="w100">车次</th><th class="w150">出发日期</th><th class="w100">出发站</th><th class="w100">到达站</th><th class="w100">座位</th><th class="w100">单价</th><th class="w100">人数</th><th class="w100">费用</th><th class="w150">总价</th><th class="w100">下单时间</th><th class="w100">状态</th></tr>
                @foreach(var item in ViewData["ol"] as List<TModel.OrderList>)
                {
                    <tr onclick="sps(this)"><td class="w200">@item.Sn</td><td class="w100">@item.Ptrain</td><td class="w150">@item.Pdate</td><td class="w100">@item.Pfrom</td><td class="w100">@item.Pto</td><td class="w100">@item.Pseat</td><td class="w100">@item.Price</td><td class="w100">@item.Passager</td><td class="w100">@item.Tip</td><td class="w150">@item.Total</td><td class="w100">@item.Cdate</td><td class="w100">@item.billstate.Name</td></tr>
                }
            </table>
        </div>
    </div>
    <div>乘客信息
        <div>
            <table id="ckxx">
                <tr><th class="w100">序号</th><th class="w100">姓名</th><th class="w150">证件类型</th><th class="w200">证件号</th><th class="w100">出生日期</th><th class="w100">状态</th></tr>
                @foreach (var i in ViewData["op"] as List<TModel.OdPassagers>)
                {
                    <tr><td class="w100">@i.Psn</td><td class="w100">@i.Name</td><td class="w150">@i.Card</td><td class="w200">@i.Cnum</td><td class="w100">@i.Bday</td><td class="w100">@i.billstate.Name</td></tr>
                }
            </table>
        </div>
    </div>
    
</div>
@Styles.Render("~/Content/OrderLists.css")
@Scripts.Render("~/Scripts/myjs/OrderList.js")


